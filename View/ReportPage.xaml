<Page x:Class="TestApp.View.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestApp.View" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:TestApp.ViewModel"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Margin="40,0">

    <Page.DataContext>
        <vm:ReportVM/>
    </Page.DataContext>

    <Grid>
        <StackPanel>
            <ui:TextBlock  
                          Text="Сформировать отчет" 
                          FontSize="36" 
                          FontWeight="Bold" Margin="10,20"/>

            <ui:Button Content="Сформировать отчет в Microsoft Word" 
                    Command="{Binding GenerateReportCommand}" 
                    Width="380" 
                    Height="50" 
                    Margin="10"
                    FontWeight="Bold"
                    Appearance="Info">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="Document24"/>
                </ui:Button.Icon>
            </ui:Button>
        </StackPanel>
    </Grid>
</Page>
