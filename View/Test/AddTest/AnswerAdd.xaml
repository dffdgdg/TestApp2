<UserControl x:Class="TestApp.View.Test.AddTest.AnswerAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestApp.View.Test.AddTest" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="42,0">
    <StackPanel Margin="5">
        <ui:TextBox HorizontalAlignment="Stretch" Margin="5" PlaceholderText="Введите текст вопроса" x:Name="QuestionTextBox"/>
        <StackPanel x:Name="AnswersPanel" Orientation="Vertical"/>
        <Button Content="Добавить вариант ответа" Click="Button_Click" Margin="5"/>
    </StackPanel>
</UserControl>