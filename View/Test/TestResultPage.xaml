<Page x:Class="TestApp.View.TestResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Результаты теста"       
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Grid Margin="42,0">
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="Результаты теста" FontSize="24" FontWeight="Bold" Margin="0,10"/>
            <Separator Margin="0,10"/>
            <TextBlock Text="{Binding TotalQuestions, StringFormat='Количество вопросов: {0}'}" FontSize="16" Margin="0,5" />
            <TextBlock Text="{Binding TotalScore, StringFormat='Общее количество баллов: {0:F1}'}" FontSize="16" Margin="0,5" />
            <TextBlock Text="{Binding CompletionDate, StringFormat='Дата прохождения: {0:dd.MM.yyyy HH:mm}'}" FontSize="16" Margin="0,5" />
            <TextBlock Text="{Binding FormattedDuration}" FontSize="16" Margin="0,5" />
            <Separator Margin="0,10"/>
            <TextBlock Text="Спасибо за прохождение теста!" FontSize="18" FontWeight="Bold" Margin="0,10" Foreground="#4CAF50"/>
        </StackPanel>
    </Grid>
</Page>
